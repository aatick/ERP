
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUcasportfolio.cshtml";
}
<style>
    .k-grouping-header {
        background-color: #1ABB9C;
    }
</style>

<script type="text/javascript">

    function GetEditDataById(Id) {
        //window.location.href = "/Batch/Edit/" + BatchId;
        var link = '@Url.Action("Edit", "CompanyDepository", new { Id = -1 }, "http")'
        link = link.replace("-1", Id);
        window.location.href = link;
    }

    function DeleteById(Id) {
        $.alert.open('confirm', 'Are you sure you want to delete this record?', function (button) {
            if (button == 'yes') {
                $.ajax({
                    type: 'GET',
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("DeleteCompanyDepository", "CompanyDepository", "http")',
                    data: { Id: Id },
                    dataType: 'json',
                    async: true,
                    success: function (data) {
                        $("#grid").data("kendoGrid").dataSource.read();
                    },
                    error: function (request, status, error) {
                        alert(request.statusText + "/" + request.statusText + "/" + error);
                    }
                });
                return true;
            }
            else {
                return false;
            }
        });
    }

    function GetCompanyDepositoryInfo() {

        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: '@Url.Action("GetCompanyDepositoryInfo", "CompanyDepository", "http")',
                    dataType: "json",
                    data: { }
                }
            },
            pageSize: 20
        });
        $("#grid").kendoGrid({
            dataSource: dataSource,
            height: 450,
            groupable: true,
            reorderable: true,
            resizable: true,
            filterable: true,
            sortable: true,
            columnMenu: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            columns: [{
                field: "Id",
                hidden: true,
                filterable: false
            },
            {
                field: "rowNumber",
                title: "SL",
                template: "<span class='row-number'></span>",
                width: "10%"
            },

            {
                field: "DepositoryCompanyName",
                title: "Depository Name",
                width:"25%"
            },
             {
                 field: "CompanyDepositoryShortName",
                 title: "Short Name",
             },
              {
                  field: "Address",
                  title: "Address",
                  hidden: true
              },
               {
                   field: "Email",
                   title: "Email",
               },
                {
                    field: "Fax",
                    title: "Fax",
                    hidden: true,

                },
                {
                    field: "ContactPerson",
                    title: "Contact Person",
                },
                {
                    field: "ContactPhone",
                    title: "Contact Phone",
                },
                {
                    field: "ContactEmail",
                    title: "Contact Email",
                    hidden: true,
                }
            //    ,

            //{

            //    title: "Action",
            //    width: "10%",
            //    template: function (dataItem) {

            //        return '<a href="#"  onclick="GetEditDataById(' + dataItem.Id + ')"  title="Edit" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i></a>' 
            //           // '<a href="#" title="Delete" onclick="DeleteById(' + dataItem.ID + ')" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></a>'
            //    }
            //}
            ],
            dataBound: function () {
                var rows = this.items();
                $(rows).each(function () {
                    var index = $(this).index() + 1;
                    var rowLabel = $(this).find(".row-number");
                    $(rowLabel).html(index);
                });
            }
        });
    }

    $(document).ready(function () {
        GetCompanyDepositoryInfo();
    });

</script>
