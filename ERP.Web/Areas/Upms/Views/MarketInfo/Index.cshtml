    function GetMarketInfo() {
        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: '@Url.Action("GetMarketInfo", "MarketInfo", "http")',
                    dataType: "json",
                    data: {}
                }
            },
            pageSize: 15,
        });
        $("#grid").kendoGrid({
            dataSource: dataSource,
            height: 350,
            groupable: true,
            reorderable: true,
            filterable: true,
            sortable: true,
            resizable: true,
            columnMenu: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            columns: [{
                field: "Id",
                hidden: true,
                filterable: false
            },
            {
                field: "rowNumber",
                title: "SL",
                template: "<span class='row-number'></span>",
                width: "15%"
            },
            {
                field: "MarketCode",
                title: "Market Code"

            },
            {
                field: "ExchangeName",
                title: "Exchange Name",
            },
            {
                field: "MarketShortName",
                title: "Short Name"

            }
            //,
            
            // {
            //     title: "Action",
            //     width: "10%",
            //     template: function (dataItem) {
            //         return '<a href="#" title="Edit" onclick=" LoadEditData(' + dataItem.Id + ',' + "'" + dataItem.MarketShortName + "'" + ',' + "'" + dataItem.ExchangeName + "'" + ')" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i></a>';//<a href="#" title="Delete" onclick="Delete(' + dataItem.Id + ')" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i>
            //     }
            // },
            ],
            dataBound: function () {
                var rows = this.items();
                $(rows).each(function () {
                    var index = $(this).index() + 1;
                    var rowLabel = $(this).find(".row-number");
                    $(rowLabel).html(index);
                });
            }
        });
    }

