    //    var InvestorId = $("#HdnInvestorId").val();

    //    var valid = Validation();
    //    //var payAmtFot = InitialCalPayAmt();
    //    alert(valid);
    //    if ( valid == 1)
    //    {


    //    }


    //}




    $(document).ready(function () {

        $("#btnSave").click(function (e) {
            e.preventDefault();
            SaveAccountClosing();
        });


        $("#InvestorCode").blur(function () {

            if ($("#InvestorCode").val() != "")
            {
                GetInvestorInfo();
            }
        });

    });

</script>

