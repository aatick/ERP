<script type="text/javascript">
    var record = 0;
    function GetBankInfo() {
        var DepositoryParticipantId = $("#BrokerDepositoryList").val();
        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: '@Url.Action("GetBankInfo", "LookupBank", "http")',
                    dataType: "json",
                    data: { }
                }
            },
            pageSize: 20
        });
        $("#grid").kendoGrid({
            dataSource: dataSource,
            height: 800,
            groupable: true,
            reorderable: true,
            resizable: true,
            filterable: true,
            sortable: true,
            columnMenu: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            columns: [{
                field: "Id",
                hidden: true,
                filterable: false
            },
             {
                 template: "#= ++record #",
                 title: "SL",
                 width: "10%",
             },
             {
                 field: "BankName",
                 title: "Bank Name",
             },
            {
                field: "BankShortName",
                title: "Short Name",
            },
            {
                title: "Action",
                width: "10%",
                template: function (dataItem) {
                    return '<a href="#" title="Edit" onclick="LoadEditData(' + dataItem.Id + ',' + "'" + dataItem.BankShortName + "'" + ',' + "'" + dataItem.BankName + "'" + ')" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i></a>'
                }
            }
            ],
            dataBinding: function () {
                record = (this.dataSource.page() - 1) * this.dataSource.pageSize();
            }
        });
        $("#autoSearch").keyup(function () {
            var selecteditem = $('#autoSearch').val();
            var kgrid = $("#grid").data("kendoGrid");
            selecteditem = selecteditem.toUpperCase();
            var selectedArray = selecteditem.split(" ");
            if (selecteditem) {
                //kgrid.dataSource.filter({ field: "UserName", operator: "eq", value: selecteditem });
                var orfilter = { logic: "or", filters: [] };
                var andfilter = { logic: "and", filters: [] };
                $.each(selectedArray, function (i, v) {
                    if (v.trim() == "") {
                    }
                    else {
                        $.each(selectedArray, function (i, v1) {
                            if (v1.trim() == "") {
                            }
                            else {
                                orfilter.filters.push({ field: "BankName", operator: "contains", value: v1 },
                                                      { field: "BankShortName", operator: "contains", value: v1 });

                                andfilter.filters.push(orfilter);
                                orfilter = { logic: "or", filters: [] };
                            }
                        });
                    }
                });
                kgrid.dataSource.filter(andfilter);
            }
            else {
                kgrid.dataSource.filter({});
            }
        });
    }

