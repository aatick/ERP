
@{
    ViewBag.Title = "Approve";
    Layout = "~/Views/Shared/_LayoutUcasportfolio.cshtml";
}

<style>
    .ui-autocomplete {
        cursor: pointer;
        height: 400px;
        width: 300px;
        overflow-y: scroll;
        background-color: white;
        color: rgb(0,188,212);
        /*outline-style:outset;*/
    }

    .bordercss {
        border: 3px double #CCCCCC;
        color: black;
    }

        .bordercss:focus {
            box-shadow: 0 0 5px rgba(81, 203, 238, 1);
            border: 2px solid rgba(81, 203, 238, 1);
        }

    .required::after {
        content: " *";
        color: red;
    }

    .k-grouping-header {
        background-color: #1ABB9C;
    }
</style>

<script type="text/javascript">


    function RejectPayment(Id) {
        $.alert.open('confirm', 'Are you sure you want to REJECT this record?', function (button) {
            if (button == 'yes') {
                $.ajax({
                    type: 'GET',
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("RejectPayment", "AccPayment", "http")',
                    data: { Id: Id },
                    dataType: 'json',
                    async: true,
                    success: function (data) {
                        $("#grid").data("kendoGrid").dataSource.read();
                    },
                    error: function (request, status, error) {
                        alert(request.statusText + "/" + request.statusText + "/" + error);
                    }
                });
                return true;
            }
            else {
                return false;
            }
        });
    }


    function ApprovePayment(Id) {
        $.alert.open('confirm', 'Are you sure you want to APPROVE this record?', function (button) {
            if (button == 'yes') {
		$("#AjaxLoader").show();
                $.ajax({
                    type: 'GET',
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("ApprovePayment", "AccPayment", "http")',
                    data: { Id: Id },
                    dataType: 'json',
                    async: true,
                    success: function (result) {
			$("#AjaxLoader").hide();
                        if (result == "1")
                        {
                            GetPaymentInfoBeforeApprove();
                            $.alert.open("info", "Save successfull. ");
                        }
                        else
                        {
                            $.alert.open("error", "" + result + "")
                        }
                       
                    },
                    error: function (request, status, error) {
			$("#AjaxLoader").hide();
                        alert(request.statusText + "/" + request.statusText + "/" + error);
                    }
                });
                return true;
            }
            else {
                return false;
            }
        });
    }

    function GetPaymentInfoBeforeApprove() {
        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: '@Url.Action("GetPaymentInfoBeforeApprove", "AccPayment", "http")',
                    dataType: "json",
                    data: {}
                }
            },
            pageSize: 500,
        });
        $("#grid").kendoGrid({
            dataSource: dataSource,
            height: 600,
            groupable: true,
            reorderable: true,
            filterable: true,
            sortable: true,
            resizable: true,
            columnMenu: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            columns: [{
                field: "Id",
                hidden: true,
                filterable: false
            },
            {
                field: "rowNumber",
                title: "SL",
                template: "<span class='row-number'></span>",
                width: "5%"
            },

            {
                field: "VoucherNo",
                title: "Receipt No",
            },
            {
                field: "InvestorName",
                title: "Investor Name",
                width: "22%"

            },
             {
                 field: "TransactionModeName",
                 title: "Transaction Mode",
             },
            {
                field: "ChequeNo",
                title: "Cheque No"

            },
             {
                 field: "ChequeDateMsg",
                 title: "Cheque Date",
             },
            {
                field: "Amount",
                title: "Amount"

            },
            {
                field: "BankName",
                title: "Bank",
            },
            {
                field: "BankBranchName",
                title: "Bank Branch",
                hidden: true

            },
             {
                 field: "TransactionDateMsg",
                 title: "Transaction Date",
             },
            {
                field: "PostDateMsg",
                title: "Post Date",
                hidden: true

            },
            {
                field: "DocRefNo",
                title: "Doc. Ref.No",
                hidden: true
            },
            {
                field: "BrokerBranchName",
                title: "Broker Branch",
                hidden: true

            },
            {
                field: "AccountNo",
                title: "AccountNo",
                hidden: true
             },
            {
                field: "Remarks",
                title: "Remarks",
                hidden: true
            },
            {
                field: "ValuedateMsg",
                title: "Value date",
                hidden:true

            },
             {
                 title: "Action",
                 width: "10%",
                 template: function (dataItem) {
                     return '<a href="#" title="Approve" onclick="ApprovePayment(' + dataItem.Id + ')" class="btn btn-info btn-xs"><i class="fa fa-caret-square-o-down"></i></a><a href="#" title="Reject" onclick="RejectPayment(' + dataItem.Id + ')" class="btn btn-danger btn-xs"><i class="fa fa-times"></i></a>';
                 }
             },
            ],
            dataBound: function () {
                var rows = this.items();
                $(rows).each(function () {
                    var index = $(this).index() + 1;
                    var rowLabel = $(this).find(".row-number");
                    $(rowLabel).html(index);
                });
            }
        });
    }

    $(document).ready(function () {

        GetPaymentInfoBeforeApprove();


    });
</script>
@using (Html.BeginForm("Approve", "AccPayment", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal form-label-left", id = "AccPaymentForm" }))
{
    @Html.AntiForgeryToken()
    <div class="page-title">
        <div class="title_left PageHeader" style="width:90%;">
            <h3 style="color: white;padding:2px">Cheque/Cash Payment Approve</h3>
        </div>
    </div>
    <div id="AjaxLoader" class="ajaxLoader"></div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <div class="row">
                        <div id="grid"> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}