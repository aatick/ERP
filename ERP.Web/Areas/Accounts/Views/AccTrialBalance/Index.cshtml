
@{
    ViewBag.Title = "Trial Balance";
    Layout = "~/Views/Shared/_LayoutUcasportfolio.cshtml";
}
<style>
    .bordercss {
        border: 3px double #CCCCCC;
        color: black;
    }

        .bordercss:focus {
            box-shadow: 0 0 5px rgba(81, 203, 238, 1);
            border: 2px solid rgba(81, 203, 238, 1);
        }
</style>
<script type="text/javascript">
  
    $(document).ready(function () {
        $("#loading").hide();

        

        $("#txtFromDt").on("change", function () {
            var fromDate = $("#txtFromDt").val();
            $("#txtToDt").datepicker('option', { minDate: fromDate });
        });
        $("#txtToDt").on("change", function () {
            var toDate = $("#txtToDt").val();
            $("#txtFromDt").datepicker('option', { maxDate: toDate });
        });



        $("#btnView").click(function (e) {
            e.preventDefault();
            
                var from_date = $("#txtFromDt").val();
                var to_date = $("#txtToDt").val();

                if (from_date != "" && to_date != "")
                {
                    var url = '/Accounts/AccTrialBalance/GenerateTrialBalanceReport?rptslnx=1&from_date=' + from_date + '&to_date=' + to_date;
                    window.open(url);
                }
                else
                {
                    $.alert.open("error","Insert date");
                }
        });
    });
</script>

