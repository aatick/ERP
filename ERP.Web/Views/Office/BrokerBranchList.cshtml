<script type="text/javascript">

    function GetEditDataById(Id) {
        //window.location.href = "/Batch/Edit/" + BatchId;
        var link = '@Url.Action("BrokerBranchEdit", "Office", new { Id = -1 }, "http")'
        link = link.replace("-1", Id);
        window.location.href = link;
    }

    function DeleteById(Id) {
        $.alert.open('confirm', 'Are you sure you want to delete this record?', function (button) {
            if (button == 'yes') {
                $.ajax({
                    type: 'GET',
                    contentType: "application/json; charset=utf-8",
                    url: '@Url.Action("DeleteBrokerInfo", "Office", "http")',
                    data: { Id: Id },
                    dataType: 'json',
                    async: true,
                    success: function (data) {
                        $("#grid").data("kendoGrid").dataSource.read();
                    },
                    error: function (request, status, error) {
                        alert(request.statusText + "/" + request.statusText + "/" + error);
                    }
                });
                return true;
            }
            else {
                return false;
            }
        });
    }

    function GetBrokerBranchInfo() {
        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: '@Url.Action("GetBrokerBranchInfo", "Office", "http")',
                    dataType: "json",
                    data: { }
                }
            },
            pageSize: 20
        });
        $("#grid").kendoGrid({
            dataSource: dataSource,
            height: 550,
            groupable: true,
            reorderable: true,
            resizable: true,
            filterable: true,
            sortable: true,
            columnMenu: true,
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            columns: [{
                field: "Id",
                hidden: true,
                filterable: false
            },
             {
                 field: "RowSL",
                 title: "SL",
                 width: "10%"
             },
             {
                 field: "BrokerBranchName",
                 title: "Branch",
                 width: "20%"
             },
            {
                field: "BrokerName",
                title: "Broker Name",
                width: "20%"
            },
             
              {
                  field: "Address",
                  title: "Address",
                  hidden:true,
              },
               {
                   field: "ThanaName",
                   title: "Thana",
                   hidden: true,
               },
                {
                    field: "ContactName",
                    title: "Contact Person",
                },
                {
                    field: "ContactMobile",
                    title: "Contact Mobile",
                },
                {
                    field: "ContactEmail",
                    title: "Contact Email",
                    hidden: true,
                },
            {

                title: "Action",
                width: "10%",
                template: function (dataItem) {

                    return '<a href="#"  onclick="GetEditDataById(' + dataItem.Id + ')"  title="Edit" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i></a>' 
                       // '<a href="#" title="Delete" onclick="DeleteById(' + dataItem.ID + ')" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></a>'
                }
            }
            ],
        });
        $("#autoSearch").keyup(function () {
            var selecteditem = $('#autoSearch').val();
            var kgrid = $("#grid").data("kendoGrid");
            selecteditem = selecteditem.toUpperCase();
            var selectedArray = selecteditem.split(" ");
            if (selecteditem) {
                //kgrid.dataSource.filter({ field: "UserName", operator: "eq", value: selecteditem });
                var orfilter = { logic: "or", filters: [] };
                var andfilter = { logic: "and", filters: [] };
                $.each(selectedArray, function (i, v) {
                    if (v.trim() == "") {
                    }
                    else {
                        $.each(selectedArray, function (i, v1) {
                            if (v1.trim() == "") {
                            }
                            else {
                                orfilter.filters.push({ field: "BrokerName", operator: "contains", value: v1 },
                                                      { field: "BrokerBranchName", operator: "contains", value: v1 });
                                                     
                                andfilter.filters.push(orfilter);
                                orfilter = { logic: "or", filters: [] };
                            }
                        });
                    }
                });
                kgrid.dataSource.filter(andfilter);
            }
            else {
                kgrid.dataSource.filter({});
            }
        });
    }

    $(document).ready(function () {
         GetBrokerBranchInfo();
    });

</script>
