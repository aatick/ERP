@using System.Configuration
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title | Ucas Portfolio </title>
    <link rel="stylesheet" href="~/Content/login_content/css/style.css">
    <style type="text/css">
        .wrapper {
            background: #2A3F54;
            background: -webkit-linear-gradient(top left, #2A3F54 0%, #73879C 100%);
            background: linear-gradient(to bottom right, #2A3F54 0%, #73879C 100%);
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            margin-top: 0px;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 150px 0;
            height: 400px;
            text-align: center;
        }

        .button {
            color: #2A3F54;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="container">
            <h1>Welcome</h1>
            <h3>To UPMS</h3>
            @RenderBody()
        </div>
        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Content/login_content/js/index.js"></script>
    @if (ConfigurationManager.AppSettings["Mode"] == "0")
    {
        <script type="text/javascript">
            window.history.pushState('', '', '/');
        </script>
    }
</body>
</html>
